---
const { currentPath } = Astro.props;
const adminUser = Astro.cookies.get("admin_user")?.value || "Admin";
---

<nav class="bg-white border-b border-slate-200/60 sticky top-0 z-50 backdrop-blur-md bg-white/80">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-20">
            <div class="flex items-center">
                <a
                    href="/admin/dashboard"
                    class="flex-shrink-0 flex items-center gap-3 group"
                >
                    <div
                        class="w-9 h-9 bg-teal-600 rounded-xl flex items-center justify-center text-white font-bold shadow-lg shadow-teal-600/20 group-hover:rotate-6 transition-transform"
                    >
                        T
                    </div>
                    <span
                        class="text-xl font-bold text-slate-900 tracking-tight"
                        >Talde<span class="text-teal-600">BOT</span> <span class="text-slate-400 font-medium text-sm ml-1">Admin</span></span
                    >
                </a>
                <div class="hidden sm:ml-10 sm:flex sm:space-x-8">
                    <a
                        href="/admin/dashboard"
                        class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-semibold transition-all ${currentPath === "/admin/dashboard" ? "border-teal-600 text-slate-900" : "border-transparent text-slate-500 hover:text-teal-600 hover:border-teal-200"}`}
                    >
                        Arbel Nagusia
                    </a>
                    <a
                        href="/admin/create-project"
                        class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-semibold transition-all ${currentPath === "/admin/create-project" ? "border-teal-600 text-slate-900" : "border-transparent text-slate-500 hover:text-teal-600 hover:border-teal-200"}`}
                    >
                        Proiektu Berria
                    </a>
                    <a
                        href="/admin/users"
                        class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-semibold transition-all ${currentPath === "/admin/users" ? "border-teal-600 text-slate-900" : "border-transparent text-slate-500 hover:text-teal-600 hover:border-teal-200"}`}
                    >
                        Erabiltzaileak
                    </a>
                </div>
            </div>
            <div class="flex items-center gap-4 relative">
                <!-- User Profile Dropdown -->
                <div class="relative" id="user-menu-container">
                    <button 
                        id="user-menu-button"
                        class="flex items-center gap-3 px-4 py-2 bg-slate-50 rounded-xl border border-slate-100 hover:bg-slate-100 transition-all focus:outline-none group"
                        aria-expanded="false"
                        aria-haspopup="true"
                    >
                        <div class="w-8 h-8 bg-teal-50 rounded-lg flex items-center justify-center text-teal-600 border border-teal-100 group-hover:bg-teal-600 group-hover:text-white transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <div class="text-left hidden sm:block">
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest leading-none mb-1">Admin</p>
                            <p class="text-sm font-bold text-slate-800 leading-none">{adminUser}</p>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400 group-hover:text-teal-600 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>

                    <!-- Dropdown Menu -->
                    <div 
                        id="user-dropdown"
                        class="hidden absolute right-0 mt-3 w-56 bg-white rounded-2xl shadow-2xl shadow-slate-200/50 border border-slate-100 py-2 z-50 transform origin-top-right transition-all duration-200 overflow-hidden"
                    >
                        <a 
                            href="/admin/profile" 
                            class="flex items-center gap-3 px-4 py-3 text-sm text-slate-600 hover:bg-teal-50 hover:text-teal-700 transition-colors"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            Nire Profila
                        </a>

                        <div class="border-t border-slate-50 mt-1 pt-1">
                            <form action="/api/admin/logout" method="POST">
                                <button 
                                    type="submit"
                                    class="w-full flex items-center gap-3 px-4 py-3 text-sm text-red-600 hover:bg-red-50 transition-colors font-semibold"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                    </svg>
                                    Saioa Itxi
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<script>
    const button = document.getElementById('user-menu-button');
    const dropdown = document.getElementById('user-dropdown');
    const container = document.getElementById('user-menu-container');

    if (button && dropdown && container) {
        button.addEventListener('click', (e) => {
            e.stopPropagation();
            dropdown.classList.toggle('hidden');
            button.setAttribute('aria-expanded', dropdown.classList.contains('hidden') ? 'false' : 'true');
        });

        // Close when clicking outside
        document.addEventListener('click', (e) => {
            if (!container.contains(e.target as Node)) {
                dropdown.classList.add('hidden');
                button.setAttribute('aria-expanded', 'false');
            }
        });

        // ESC key to close
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                dropdown.classList.add('hidden');
                button.setAttribute('aria-expanded', 'false');
            }
        });
    }
</script>
