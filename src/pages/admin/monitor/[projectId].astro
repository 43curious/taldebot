---
export const prerender = false;
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { db } from "../../../lib/db";
import { projects, students } from "../../../../db/schema";
import { eq, and } from "drizzle-orm";

const { projectId } = Astro.params;
const pid = parseInt(projectId || "");

if (isNaN(pid)) return Astro.redirect("/admin/dashboard");

const project = await db.query.projects.findFirst({
    where: eq(projects.id, pid),
});

if (!project) return Astro.redirect("/admin/dashboard");

const allStudents = await db.query.students.findMany({
    where: eq(students.projectId, pid),
    orderBy: (students, { asc }) => [asc(students.name)],
});

const completed = allStudents.filter((s) => s.hasCompleted);
const activeStudents = allStudents.filter((s) => !s.isExcluded);
const pending = activeStudents.filter((s) => !s.hasCompleted);
const excluded = allStudents.filter((s) => s.isExcluded);

const completionRate = activeStudents.length
    ? Math.round((completed.length / activeStudents.length) * 100)
    : 0;
---

<AdminLayout title={`Monitor: ${project.name}`}>
    <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="flex-1 min-w-0">
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-2">
                    <li>
                        <a
                            href="/admin/dashboard"
                            class="text-sm text-gray-500 hover:text-gray-700"
                            >Projects</a
                        >
                    </li>
                    <li>
                        <svg
                            class="h-5 w-5 text-gray-400"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                            ><path
                                fill-rule="evenodd"
                                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                clip-rule="evenodd"></path></svg
                        >
                    </li>
                    <li class="text-sm font-medium text-gray-700">
                        {project.name}
                    </li>
                </ol>
            </nav>
            <h2
                class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl flex items-center gap-3"
            >
                Project Monitoring
                <span
                    class="text-sm font-mono bg-blue-50 text-blue-600 px-2 py-1 rounded border border-blue-100"
                    >ID: {project.id}</span
                >
                <span
                    class="text-sm bg-gray-100 text-gray-600 px-2 py-1 rounded border border-gray-200"
                >
                    {
                        project.numTeams
                            ? `${project.numTeams} Teams`
                            : `~${project.targetTeamSize} per Team`
                    }
                </span>
            </h2>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4 gap-3">
            <a
                href={`/admin/teams/${project.id}`}
                class={`inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white ${completionRate > 50 ? "bg-blue-600 hover:bg-blue-700" : "bg-gray-400 cursor-not-allowed"}`}
            >
                Generate Teams
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column: Stats & Pending -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Stats Card -->
            <div class="bg-white p-6 shadow rounded-lg border border-gray-200">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-lg font-medium text-gray-900">
                        Completion Status
                    </h3>
                    <span class="text-2xl font-bold text-blue-600"
                        >{completed.length} / {allStudents.length}</span
                    >
                </div>
                <div class="w-full bg-gray-200 rounded-full h-4 mb-4">
                    <div
                        class="bg-blue-600 h-4 rounded-full transition-all"
                        style={`width: ${completionRate}%`}
                    >
                    </div>
                </div>
                <div class="flex justify-between text-sm text-gray-500">
                    <span>{completionRate}% Complete</span>
                    {
                        completionRate < 100 ? (
                            <span>Waiting for {pending.length} students</span>
                        ) : (
                            <span>Ready to generate!</span>
                        )
                    }
                </div>
            </div>

            <!-- Pending Students -->
            <div
                class="bg-white shadow rounded-lg border border-gray-200 overflow-hidden"
            >
                <div
                    class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex justify-between items-center"
                >
                    <h3 class="text-lg font-medium text-gray-900">
                        Pending Responses ({pending.length})
                    </h3>
                    <button
                        class="text-sm text-blue-600 font-medium hover:text-blue-800"
                        >Send Reminders to All</button
                    >
                </div>
                <ul class="divide-y divide-gray-200">
                    {
                        pending.map((student) => (
                            <li class="px-6 py-4 flex items-center justify-between hover:bg-gray-50">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-400 font-bold">
                                        {student.name.charAt(0)}
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">
                                            {student.name}
                                        </p>
                                        <p class="text-xs text-gray-500">
                                            {student.email ||
                                                "No email provided"}
                                        </p>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <button class="px-3 py-1 text-xs border border-gray-300 rounded hover:bg-white text-gray-600">
                                        Remind
                                    </button>
                                    <div class="relative dropdown-container">
                                        <button
                                            onclick="toggleDropdown(this)"
                                            class="px-3 py-1 text-xs bg-gray-100 rounded hover:bg-gray-200 text-gray-700 dropdown-trigger"
                                        >
                                            Options
                                        </button>
                                        <div class="absolute right-0 bottom-full mb-2 hidden bg-white border border-gray-200 rounded shadow-lg p-2 w-40 z-10 dropdown-menu">
                                            <a
                                                href={`/student/form/${pid}?studentId=${student.id}`}
                                                class="block w-full text-left px-2 py-1 text-xs hover:bg-blue-50 text-gray-700 rounded"
                                            >
                                                Fill for Student
                                            </a>
                                            <button
                                                onclick={`excludeStudent(${student.id}, true)`}
                                                class="block w-full text-left px-2 py-1 text-xs hover:bg-red-50 text-red-600 rounded"
                                            >
                                                Mark as Absent
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        ))
                    }
                    {
                        excluded.map((student) => (
                            <li class="px-6 py-4 flex items-center justify-between bg-red-50/50 opacity-70">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center text-red-400 font-bold italic">
                                        X
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-500 line-through">
                                            {student.name}
                                        </p>
                                        <p class="text-xs text-red-400">
                                            Absent / Excluded
                                        </p>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <button
                                        onclick={`excludeStudent(${student.id}, false)`}
                                        class="px-3 py-1 text-xs border border-gray-300 rounded hover:bg-white text-gray-600 bg-white"
                                    >
                                        Restore
                                    </button>
                                </div>
                            </li>
                        ))
                    }
                    {
                        pending.length === 0 && (
                            <li class="px-6 py-12 text-center text-gray-500 italic">
                                All students have completed the form!
                            </li>
                        )
                    }
                </ul>
            </div>
        </div>

        <!-- Right Column: Completed -->
        <div class="space-y-8">
            <div
                class="bg-white shadow rounded-lg border border-gray-200 overflow-hidden"
            >
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h3 class="text-lg font-medium text-gray-900">
                        Successfully Completed ({completed.length})
                    </h3>
                </div>
                <ul
                    class="divide-y divide-gray-200 max-h-[600px] overflow-y-auto"
                >
                    {
                        completed.map((student) => (
                            <li class="px-6 py-3 flex items-center gap-3">
                                <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-4 w-4"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width={3}
                                            d="M5 13l4 4L19 7"
                                        />
                                    </svg>
                                </div>
                                <span class="text-sm font-medium text-gray-900">
                                    {student.name}
                                </span>
                            </li>
                        ))
                    }
                    {
                        completed.length === 0 && (
                            <li class="px-6 py-8 text-center text-gray-500 text-sm">
                                Waiting for first response...
                            </li>
                        )
                    }
                </ul>
            </div>
        </div>
    </div>

    <script is:inline define:vars={{ pid }}>
        async function excludeStudent(studentId, exclude) {
            if (
                !confirm(
                    exclude
                        ? "Mark this student as absent? They will be distributed in a way that minimizes their impact on teams."
                        : "Restore this student?",
                )
            )
                return;

            try {
                const res = await fetch(
                    `/api/admin/exclude-student?projectId=${pid}&studentId=${studentId}&exclude=${exclude}`,
                    { method: "POST" },
                );
                if (res.ok) {
                    window.location.reload();
                } else {
                    alert("Error updating student status");
                }
            } catch (e) {
                console.error(e);
                alert("Network error");
            }
        }

        function toggleDropdown(button) {
            // Close all other dropdowns
            document.querySelectorAll(".dropdown-menu").forEach((menu) => {
                if (menu !== button.nextElementSibling) {
                    menu.classList.add("hidden");
                }
            });
            // Toggle current one
            button.nextElementSibling.classList.toggle("hidden");
        }

        // Close dropdowns when clicking outside
        document.addEventListener("click", (e) => {
            if (!e.target.closest(".dropdown-container")) {
                document.querySelectorAll(".dropdown-menu").forEach((menu) => {
                    menu.classList.add("hidden");
                });
            }
        });

        window.excludeStudent = excludeStudent;
        window.toggleDropdown = toggleDropdown;
    </script>
</AdminLayout>
