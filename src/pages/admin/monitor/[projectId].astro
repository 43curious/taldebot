---
export const prerender = false;
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { db } from "../../../lib/db";
import { projects, students } from "../../../../db/schema";
import { eq, and } from "drizzle-orm";

const { projectId } = Astro.params;
const pid = parseInt(projectId || "");

if (isNaN(pid)) return Astro.redirect("/admin/dashboard");

const project = await db.query.projects.findFirst({
    where: eq(projects.id, pid),
});

if (!project) return Astro.redirect("/admin/dashboard");

const allStudents = await db.query.students.findMany({
    where: eq(students.projectId, pid),
    orderBy: (students, { asc }) => [asc(students.name)],
});

const completed = allStudents.filter((s) => s.hasCompleted);
const activeStudents = allStudents.filter((s) => !s.isExcluded);
const pending = activeStudents.filter((s) => !s.hasCompleted);
const excluded = allStudents.filter((s) => s.isExcluded);

const completionRate = activeStudents.length
    ? Math.round((completed.length / activeStudents.length) * 100)
    : 0;
---

<AdminLayout title={`Monitor: ${project.name}`}>
    <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="flex-1 min-w-0">
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-2">
                    <li>
                        <a
                            href="/admin/dashboard"
                            class="text-sm font-bold text-slate-400 hover:text-teal-600 transition-colors"
                            >Proiektuak</a
                        >
                    </li>
                    <li>
                        <svg
                            class="h-5 w-5 text-slate-300"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                            ><path
                                fill-rule="evenodd"
                                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                clip-rule="evenodd"></path></svg
                        >
                    </li>
                    <li class="text-sm font-bold text-slate-900">
                        {project.name}
                    </li>
                </ol>
            </nav>
            <h2
                class="text-3xl font-black leading-7 text-slate-900 tracking-tight flex items-center gap-3"
            >
                Kudeaketa
                <span
                    class="text-xs font-bold bg-teal-100 text-teal-700 px-2.5 py-1 rounded-lg border border-teal-200 uppercase tracking-wider"
                    >KODEA: {project.accessCode}</span
                >
                <span
                    class="text-xs font-bold bg-slate-100 text-slate-500 px-2.5 py-1 rounded-lg border border-slate-200 uppercase tracking-wider"
                >
                    {
                        project.numTeams
                            ? `${project.numTeams} Talde`
                            : `${project.targetTeamSize} taldeko`
                    }
                </span>
            </h2>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4 gap-3">
            <a
                href={`/api/admin/export-data?projectId=${project.id}`}
                class="inline-flex items-center px-6 py-2.5 border border-slate-300 rounded-xl shadow-lg shadow-slate-200/50 text-sm font-bold text-slate-700 bg-white hover:bg-slate-50 transition-all active:scale-95"
            >
                Esportatu Datuak (Excel)
            </a>
            <a
                href={`/admin/teams/${project.id}`}
                class={`inline-flex items-center px-6 py-2.5 border border-transparent rounded-xl shadow-lg text-sm font-bold text-white transition-all active:scale-95 ${completionRate > 50 ? "bg-teal-600 hover:bg-teal-700 shadow-teal-600/20" : "bg-slate-300 cursor-not-allowed"}`}
            >
                Taldeak Sortu
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column: Stats & Pending -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Stats Card -->
            <div
                class="bg-white p-8 shadow-xl shadow-slate-200/50 rounded-2xl border border-slate-200/60 transition-all"
            >
                <div class="flex items-center justify-between mb-8">
                    <h3 class="text-lg font-bold text-slate-900">
                        Inkestaren Egoera
                    </h3>
                    <span class="text-3xl font-black text-teal-600"
                        >{completed.length} / {allStudents.length}</span
                    >
                </div>
                <div
                    class="w-full bg-slate-100 rounded-full h-4 mb-5 border border-slate-200/50 overflow-hidden"
                >
                    <div
                        class="bg-teal-600 h-4 rounded-full transition-all duration-700"
                        style={`width: ${completionRate}%`}
                    >
                    </div>
                </div>
                <div
                    class="flex justify-between text-sm text-gray-500 font-medium"
                >
                    <span>%{completionRate} beteta</span>
                    {
                        completionRate < 100 ? (
                            <span>{pending.length} ikasleren zain</span>
                        ) : (
                            <span>Gaituta sortzeko!</span>
                        )
                    }
                </div>
            </div>

            <!-- Pending Students -->
            <div
                class="bg-white shadow-xl shadow-slate-200/50 rounded-3xl border border-slate-200/60 overflow-hidden"
            >
                <div
                    class="px-8 py-5 border-b border-slate-100 bg-slate-50/80 flex justify-between items-center"
                >
                    <h3 class="text-lg font-bold text-slate-900">
                        Erantzun gabeak ({pending.length})
                    </h3>
                    <button
                        class="text-xs font-bold text-teal-600 uppercase tracking-widest hover:text-teal-700 transition-colors"
                        >Guztiei gogorarazi</button
                    >
                </div>
                <ul class="divide-y divide-gray-200">
                    {
                        pending.map((student) => (
                            <li class="px-8 py-5 flex items-center justify-between hover:bg-slate-50/50 transition-colors">
                                <div class="flex items-center gap-4">
                                    <div class="w-12 h-12 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-400 font-black border border-slate-200 transition-all group-hover:bg-teal-50 group-hover:text-teal-600 group-hover:border-teal-100">
                                        {student.name.charAt(0)}
                                    </div>
                                    <div>
                                        <p class="text-sm font-bold text-slate-900">
                                            {student.name}
                                        </p>
                                        <p class="text-xs font-medium text-slate-400">
                                            {student.email || "Email gabe"}
                                        </p>
                                    </div>
                                </div>
                                <div class="flex gap-3">
                                    <button class="px-4 py-1.5 text-[10px] font-bold uppercase tracking-widest border border-slate-200 rounded-xl hover:bg-white text-slate-500 hover:text-teal-600 hover:border-teal-200 transition-all">
                                        Gogorarazi
                                    </button>
                                    <div class="relative dropdown-container">
                                        <button
                                            onclick="toggleDropdown(this)"
                                            class="px-4 py-1.5 text-[10px] font-bold uppercase tracking-widest bg-slate-100 rounded-xl hover:bg-slate-200 text-slate-600 transition-all dropdown-trigger"
                                        />
                                        <div class="absolute right-0 bottom-full mb-3 hidden bg-white border border-slate-200 rounded-2xl shadow-2xl p-2 w-48 z-10 dropdown-menu overflow-hidden">
                                            <a
                                                href={`/student/form/${project.accessCode}?studentId=${student.id}`}
                                                class="flex items-center gap-2 w-full text-left px-4 py-3 text-xs font-bold text-slate-600 hover:bg-teal-50 hover:text-teal-700 rounded-xl transition-colors"
                                            >
                                                Inkesta Bete
                                            </a>
                                            <button
                                                onclick={`excludeStudent(${student.id}, true)`}
                                                class="flex items-center gap-2 w-full text-left px-4 py-3 text-xs font-bold text-red-600 hover:bg-red-50 rounded-xl transition-colors"
                                            >
                                                Absent markatu
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        ))
                    }
                    {
                        excluded.map((student) => (
                            <li class="px-6 py-4 flex items-center justify-between bg-red-50/50 opacity-70">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center text-red-400 font-bold italic">
                                        X
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-500 line-through">
                                            {student.name}
                                        </p>
                                        <p class="text-xs text-red-400 font-bold uppercase tracking-tighter">
                                            Absent / Kanporatua
                                        </p>
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <button
                                        onclick={`excludeStudent(${student.id}, false)`}
                                        class="px-3 py-1 text-xs border border-gray-300 rounded hover:bg-white text-gray-600 bg-white"
                                    >
                                        Berrezarri
                                    </button>
                                </div>
                            </li>
                        ))
                    }
                    {
                        pending.length === 0 && (
                            <li class="px-6 py-12 text-center text-gray-500 italic">
                                Ikasle guztiek osatu dute inkesta!
                            </li>
                        )
                    }
                </ul>
            </div>
        </div>

        <!-- Right Column: Completed -->
        <div class="space-y-8">
            <div
                class="bg-white shadow-xl shadow-slate-200/50 rounded-3xl border border-slate-200/60 overflow-hidden"
            >
                <div class="px-8 py-5 border-b border-slate-100 bg-slate-50/80">
                    <h3 class="text-lg font-bold text-slate-900">
                        Osatuak ({completed.length})
                    </h3>
                </div>
                <ul
                    class="divide-y divide-gray-200 max-h-[600px] overflow-y-auto"
                >
                    {
                        completed.map((student) => (
                            <li class="px-6 py-3 flex items-center justify-between gap-3">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-4 w-4"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width={3}
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                    </div>
                                    <span class="text-sm font-medium text-gray-900">
                                        {student.name}
                                    </span>
                                </div>
                                <button
                                    onclick={`resetStudent(${student.id})`}
                                    class="px-3 py-1 text-[10px] font-bold uppercase tracking-widest border border-amber-200 bg-amber-50 rounded-lg hover:bg-amber-100 text-amber-700 transition-all"
                                >
                                    Berrabiarazi
                                </button>
                            </li>
                        ))
                    }
                    {
                        completed.length === 0 && (
                            <li class="px-6 py-8 text-center text-gray-500 text-sm">
                                Lehenengo erantzunaren zain...
                            </li>
                        )
                    }
                </ul>
            </div>
        </div>
    </div>

    <script is:inline define:vars={{ pid }}>
        async function excludeStudent(studentId, exclude) {
            if (
                !confirm(
                    exclude
                        ? "Ikasle hau absent bezala markatu? Taldeak osatzean eragin txikiena izan dezan banatuko da."
                        : "Ikasle hau berrezarri?",
                )
            )
                return;

            try {
                const res = await fetch(
                    `/api/admin/exclude-student?projectId=${pid}&studentId=${studentId}&exclude=${exclude}`,
                    { method: "POST" },
                );
                if (res.ok) {
                    window.location.reload();
                } else {
                    alert("Errorea ikaslearen egoera eguneratzean");
                }
            } catch (e) {
                console.error(e);
                alert("Sare errorea");
            }
        }

        function toggleDropdown(button) {
            // Close all other dropdowns
            document.querySelectorAll(".dropdown-menu").forEach((menu) => {
                if (menu !== button.nextElementSibling) {
                    menu.classList.add("hidden");
                }
            });
            // Toggle current one
            button.nextElementSibling.classList.toggle("hidden");
        }

        // Close dropdowns when clicking outside
        document.addEventListener("click", (e) => {
            if (!e.target.closest(".dropdown-container")) {
                document.querySelectorAll(".dropdown-menu").forEach((menu) => {
                    menu.classList.add("hidden");
                });
            }
        });

        window.excludeStudent = excludeStudent;
        window.toggleDropdown = toggleDropdown;

        async function resetStudent(studentId) {
            if (
                !confirm(
                    "Seguru zaude ikasle honen inkesta berrabiarazi nahi duzula? Bere erantzun guztiak ezabatuko dira eta berriro bete beharko du.",
                )
            )
                return;

            try {
                const res = await fetch(
                    `/api/admin/reset-student?projectId=${pid}&studentId=${studentId}`,
                    { method: "POST" },
                );
                if (res.ok) {
                    window.location.reload();
                } else {
                    alert("Errorea inkesta berrabiaraztean");
                }
            } catch (e) {
                console.error(e);
                alert("Sare errorea");
            }
        }

        window.resetStudent = resetStudent;
    </script>
</AdminLayout>
