---
import Layout from "../layouts/Layout.astro";
---

<Layout title="TaldeBOT - Taldeak Eratzeko Sistema Adimentsua">
	<main class="min-h-screen bg-slate-50 text-slate-900 overflow-hidden relative selection:bg-teal-500/30">
		<!-- Subtle Background Accents -->
		<div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-teal-600/5 rounded-full blur-[120px] pointer-events-none"></div>
		<div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-teal-600/5 rounded-full blur-[120px] pointer-events-none"></div>

		<!-- Nav Bar -->
		<nav class="fixed top-0 left-0 w-full z-50 px-6 py-6 flex justify-center">
			<div class="w-full max-w-6xl flex justify-between items-center px-4">
				<div class="flex items-center gap-2 group cursor-default">
					<div class="w-9 h-9 bg-teal-600 rounded-xl flex items-center justify-center font-bold text-white text-lg shadow-lg shadow-teal-600/20 group-hover:rotate-6 transition-transform">
						T
					</div>
					<span class="font-bold text-2xl tracking-tight text-slate-800">Talde<span class="text-teal-600">BOT</span></span>
				</div>
				
				<a 
					href="/admin/login" 
					class="text-sm font-semibold text-slate-500 hover:text-teal-600 transition-colors flex items-center gap-2 group py-2 px-4 rounded-lg hover:bg-teal-50"
				>
					Admin Sarbidea
					<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
				</a>
			</div>
		</nav>

		<!-- Hero Section -->
		<div class="relative min-h-screen flex flex-col items-center justify-center px-4 pt-20">
			<div class="w-full max-w-6xl flex flex-col items-center justify-center">
				<div class="w-full text-center slide-up">
					<!-- Header -->
					<div class="mb-14">
						<h1 class="text-6xl md:text-8xl font-black tracking-tighter mb-6 text-slate-900">
							Talde<span class="text-teal-600">BOT</span>
						</h1>
						<p class="text-2xl italic text-slate-500 leading-relaxed max-w-xl mx-auto">
							Taldeak sortzen, denok bat egiteko.
						</p>
					</div>

					<!-- Code Input -->
					<div class="max-w-xl mx-auto relative group">
						<div class="absolute -inset-1 rounded-2xl blur opacity-15 group-focus-within:opacity-30 transition-all duration-500"></div>
						<div class="relative flex p-2 bg-white border border-slate-200 rounded-2xl shadow-xl shadow-slate-200/50">
							<input
								type="text"
								id="project-id-input"
								placeholder="Sartu zure proiektuaren kodea..."
								maxlength="5"
								class="flex-1 bg-transparent border-none outline-none px-6 py-4 text-slate-900 text-lg placeholder:text-slate-400 selection:bg-teal-100 italic"
							/>
							<button
								onclick="const input = document.getElementById('project-id-input'); const code = input.value.trim().toUpperCase(); if(/^[0-9]{4}[A-Z]$/.test(code)) { window.location.href = `/student/form/${code}`; } else { alert('Kodeak 4 zenbaki eta letra bat izan behar du (adib. 1234A)'); }"
								class="px-10 py-4 bg-teal-600 hover:bg-teal-700 text-white rounded-xl font-bold shadow-lg shadow-teal-600/30 transition-all active:scale-95 flex items-center gap-2"
							>
							Hasi
							</button>
						</div>
						<p class="mt-8 text-sm text-slate-400 font-medium px-4">
							Zure irakasleak emango dizu profil hau osatzeko beharrezko kodea (5 karaktere).
						</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Footer -->
		<footer class="absolute bottom-0 left-0 w-full flex justify-center py-10">
			<div class="w-full max-w-6xl px-4 flex flex-col md:flex-row justify-between items-center gap-4 text-slate-400 border-t border-slate-200 pt-8">
				<p class="text-[10px] font-bold tracking-[0.3em] uppercase">
					&copy; {new Date().getFullYear()} TaldeBOT &bull; Intelligent Systems &bull; MU
				</p>
				<div class="flex gap-6 text-[10px] font-bold tracking-widest uppercase">
					<span class="text-slate-300">Pribatutasuna</span>
					<span class="text-slate-300">Baldintzak</span>
				</div>
			</div>
		</footer>
	</main>
</Layout>

<style>
	.slide-up {
		animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
	}

	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Remove arrows/spinners from number input */
	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}
	input[type=number] {
		-moz-appearance: textfield;
	}
</style>
